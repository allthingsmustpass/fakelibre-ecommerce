<script>
  document.addEventListener('DOMContentLoaded', function() {
    const addToCartBtn = document.getElementById('add-to-cart');
    const buyNowBtn = document.getElementById('buy-now');
    const productId = document.getElementById('pid').textContent.trim();
    const cartIdElement = document.getElementById('cid');
    const cartId = cartIdElement ? cartIdElement.textContent.trim() : null;
    const userId = document.getElementById('userId');


    if (addToCartBtn) {
      addToCartBtn.addEventListener('click', async function() {
        if (!cartId) {
          console.error('No se encontró el id del carrito, creando carrito');

          try {
            const response = await fetch('/api/carts', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              }
            });

            if (!response.ok) {
              throw new Error('No se pudo crear el carrito');
            }

            const result = await response.json();
            window.location.reload();
          } catch (error) {
            console.error('No se pudo crear el carrito', error);
            Window.showModalDialog('No se pudo crear el carrito', error);
            alert('No se pudo crear el carrito', error);
            return;
          }
        }

        console.log("Id del carrito OK.");

        const quantity = parseInt(document.getElementById('quantity').value, 10);
        try {
          const response = await fetch(`/api/carts/${cartId}/products/${productId}/${quantity}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });

          if (!response.ok) {
            throw new Error('No se pudo agregar el producto al carrito');
          }

          const result = await response.json();
          console.log('Producto agregado al carrito:', result);

        } catch (error) {
          console.error('Error al agregar producto al carrito:', error);
        }
      });
    }

    if (buyNowBtn) {
      buyNowBtn.addEventListener('click', async function() {
        try {
          // Crear carrito
          let response = await fetch('/api/carts', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });

          if (!response.ok) {
            throw new Error('No se pudo crear el carrito');
          }


          const cartResult = await response.json();
          const cartId = cartResult._id; 

          // Agregar producto al carrito
          const quantity = parseInt(document.getElementById('quantity').value, 10);
          response = await fetch(`/api/carts/${cartId}/products/${productId}/${quantity}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });

          if (!response.ok) {
            throw new Error('No se pudo agregar el producto al carrito');
          }

          console.log('Producto agregado al carrito');

          // Comprar el carrito
          response = await fetch(`/api/carts/${cartId}/purchase`, {
            method: 'POST'
          });

          if (!response.ok) {
            throw new Error('No se pudo comprar el carrito');
          }

          alert('Carrito comprado exitosamente');
          window.showModal('Carrito comprado exitosamente');
          window.location.reload();

        } catch (error) {
          console.error('Error:', error.message);
          alert(error.message);
          window.showModal(error.message);
        }
      });
    }
  });
</script>